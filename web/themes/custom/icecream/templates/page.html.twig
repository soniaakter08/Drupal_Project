<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <header class="header">
  {{ page.header }}
  <div class="heading">
    <h1>{{ title }}</h1> {# Page title #}
  </div>
  <nav class="menu">
    {{ page.menu }}
  </nav>
</header>

<main class="main">
  <div class="content">
    {{ page.content }}
    {{first_module_variable}}
  </div>

  {% if page.sidebar %}
  <aside class="sidebar">
    {{ page.sidebar }}
  </aside>
  {% endif %}
</main>

<footer class="footer">
  {{ page.footer }}
</footer>

  </body>
</html>